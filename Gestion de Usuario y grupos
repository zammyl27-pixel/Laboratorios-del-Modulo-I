sudo usermod -aG guest zammyl                  # Agregar usuario a grupo
sudo gpasswd -d gabriela wheel                 # Quitar usuario de grupo

# ğŸ” VerificaciÃ³n de grupos
groups gabriela
groups zammyl
getent passwd gabriela                         # Ver informaciÃ³n del usuario

